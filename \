#include <stdio.h>

int intro() {
  printf("This is a basic calculator application. It is capable of adding, subtracting, dividing, and multiplying two values.\n");
  printf("Provide two values and an operator to calculate. (Example: 2+2, 48*48, 30.3/6.3)\n");

}

double calculate() {

  double val1, val2;
  char operator;
  float sum; 

  printf("Input: ");
  scanf("%2lf %c %2lf", &val1, &operator, &val2);

  if (&operator == "+") {
        sum = val1 + val2;
    } else if (&operator == "-") {
        sum = val1 - val2;
    } else if (&operator == "/") {
        sum = val1 / val2;
    } else if (&operator == "*") {
        sum = val1 * val2;
    } else {
        printf("ERROR");
  }

  printf("%lf %c %lf = %lf", val1, operator, val2, sum);
}

int main() {
  
  intro();
  calculate();

 }
